{
    "baseBranches": [
        "main"
    ],
    "configWarningReuseIssue": false,
    "dependencyDashboard": true,
    "dependencyDashboardTitle": "Renovate: Upgrade ArgoCD Package Dependencies",
    "draftPR": true,
    "branchName": "renovate/ironbank",
    "enabledManagers": [
        "helm-values",
        "custom.regex",
        "helmv3"
    ],
    "ignorePaths": [
        "chart/charts/**"
    ],
    "labels": [
        "argocd",
        "renovate",
        "kind::maintenance",
        "priority::2"
    ],
    "postUpdateOptions": [
        "helmUpdateSubChartArchives"
    ],
    "packageRules": [
        {
            "matchManagers": [
                "helmv3",
                "helm-values",
                "custom.regex"
            ],
            "matchFileNames": [
                "chart/Chart.yaml",
                "chart/values.yaml"
            ],
            "groupName": "Tempo chart: subcharts + images"
        },
        {
            "matchDatasources": [
                "docker",
                "helm"
            ],
            "groupName": "Ironbank",
            "postUpgradeTasks": {
                "commands": [
                    "regenerate-helm-docs",
                    "bump-changelog '{{#each upgrades}}- {{depName}} {{currentVersion}} -> {{newVersion}}\\n{{/each}}'"
                ],
                "executionMode": "update",
                "fileFilters": [
                    "README.md",
                    "CHANGELOG.md"
                ]
            }
        }
    ],
    "customManagers": [
        {
            "customType": "regex",
            "description": "Update image versions in values.yaml (repository + tag)",
            "managerFilePatterns": [
                "/^chart/values\\.yaml$/"
            ],
            "matchStrings": [
                "repository:\\s*[\"']?(?<depName>[^\\s\"']+)[\"']?\\s*\\n\\s*tag:\\s*[\"']?(?<currentValue>[^\\s\"']+)[\"']?"
            ],
            "datasourceTemplate": "docker"
        },
        {
            "customType": "regex",
            "description": "Update app version chart annotations",
            "managerFilePatterns": [
                "/^chart/Chart\\.yaml$/"
            ],
            "matchStrings": [
                "- Argocd:\\s+(?<currentValue>.+)",
                "appVersion:\\s+(?<currentValue>.+)"
            ],
            "depNameTemplate": "registry1.dso.mil/ironbank/big-bang/argocd",
            "datasourceTemplate": "docker"
        },
        {
            "customType": "regex",
            "description": "Update additional app version chart annotations",
            "managerFilePatterns": [
                "/^chart/Chart\\.yaml$/"
            ],
            "matchStrings": [
                "- Argocd:\\s+(?<currentValue>.+)"
            ],
            "depNameTemplate": "registry1.dso.mil/ironbank/big-bang/argocd",
            "datasourceTemplate": "docker"
        },
        {
            "customType": "regex",
            "description": "Update docker image references",
            "managerFilePatterns": [
                "/^chart/Chart\\.yaml$/"
            ],
            "matchStrings": [
                "image:[^\\S\\r\\n]+(?<depName>.+):(?<currentValue>.+)"
            ],
            "datasourceTemplate": "docker"
        },
        {
            "customType": "regex",
            "description": "Update chart version",
            "managerFilePatterns": [
                "/^chart/Chart\\.yaml$/"
            ],
            "matchStrings": [
                "version:\\s+(?<currentValue>.+)-bb\\.\\d+"
            ],
            "autoReplaceStringTemplate": "version: {{newValue}}-bb.0",
            "depNameTemplate": "argocd",
            "datasourceTemplate": "helm",
            "registryUrlTemplate": "https://argoproj.github.io/argo-helm"
        },
        {
            "customType": "regex",
            "description": "Update redis-exporter tag in redis-bb subchart values",
            "managerFilePatterns": ["/^chart/values\\.yaml$/"],
            "matchStrings": [
                "metrics:\\s*\\n\\s*enabled:\\s*true\\s*\\n\\s*image:\\s*\\n\\s*tag:\\s*[\"']?(?<currentValue>[^\\s\"']+)[\"']?"
            ],
            "depNameTemplate": "registry1.dso.mil/ironbank/bitnami/analytics/redis-exporter",
            "datasourceTemplate": "docker"
        }        
    ],
    "separateMajorMinor": false
}
